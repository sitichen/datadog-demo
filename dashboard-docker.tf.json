            "query_value_definition": {
              "title": "Running container change",
              "title_size": "16",
              "title_align": "center",
              "time": {
                "live_span": "5m"
              },
              "autoscale": false,
              "custom_unit": "%",
              "precision": 0,
              "text_align": "center",
              "request": [
                {
                  "q": "100*(sum:docker.containers.running{$scope}/timeshift(sum:docker.containers.running{$scope}, -300))",
                  "aggregator": "last",
                  "conditional_formats": [
                    {
                      "comparator": ">=",
                      "value": 80,
                      "palette": "white_on_green",
                      "hide_value": false
                    },
                    {
                      "comparator": ">",
                      "value": 50,
                      "palette": "white_on_yellow",
                      "hide_value": false
                    },
                    {
                      "comparator": ">=",
                      "value": 0,
                      "palette": "white_on_red",
                      "hide_value": false
                    }
