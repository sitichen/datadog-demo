{
  "resource": {
    "datadog_dashboard": {
      "docker": {
        "title": "Docker - ${var.application} Containers",
        "description": "For containers related to ${var.application} service-test",
        "layout_type": "free",
        "is_read_only": false,
        "notify_list": [],
        "widget": [
          {
            "layout": {
              "x": 68,
              "y": 10,
              "width": 50,
              "height": 29
            },
            "timeseries_definition": {
              "title": "Running containers by image",
              "title_size": "16",
              "title_align": "left",
              "time": {
                "live_span": "1h"
              },
              "request": [
                {
                  "q": "sum:docker.containers.running{$scope} by {docker_image}.fill(0)",
                  "display_type": "bars"
                }
              ]
            }
          },
          {
            "layout": {
              "x": 52,
              "y": 98,
              "width": 51,
              "height": 15
            },
            "toplist_definition": {
              "title": "Most RAM-intensive containers",
              "title_size": "16",
              "title_align": "left",
              "time": {
                "live_span": "1h"
              },
              "request": [
                {
                  "q": "top(avg:docker.mem.rss{$scope} by {container_name}, 5, 'max', 'desc')",
                  "style": {
                    "palette": "dog_classic"
                  }
                }
              ]
            }
          },
          {
            "layout": {
              "x": 0,
              "y": 82,
